<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.pvt.pojos.Department" table="department">
        <id name="departmentId" column="department_id">
            <generator class="identity"/>
        </id>
        <property name="departmentName" column="dep_name" type="java.lang.String" unique="true"/>
        <list name="employees" table="employee" cascade="all" lazy="true" inverse="true">
            <key column="department_id" not-null="true"/>
            <list-index column="idx"/>
            <one-to-many class="com.pvt.pojos.Employee"/>
        </list>
    </class>
</hibernate-mapping>