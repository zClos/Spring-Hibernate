<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.pvt.pojos.EmployeeDetail" table="emp_detail">
        <id name="employeeId" column="employee_id" type="java.lang.Integer">
            <generator class="foreign">
                <param name="property">employee</param>
            </generator>
        </id>
        <one-to-one name="employee" class="com.pvt.pojos.Employee" constrained="true" fetch="join"/>
        <property name="street" column="street" type="java.lang.String"/>
        <property name="city" column="city" type="java.lang.String"/>
        <property name="state" column="state" type="java.lang.String"/>
        <property name="country" column="country" type="java.lang.String"/>
    </class>
</hibernate-mapping>